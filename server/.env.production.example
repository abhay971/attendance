# Production Environment Configuration
# ⚠️ IMPORTANT: Replace all values with your actual production values

# Database
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# JWT Secrets - Generate strong random secrets (minimum 32 characters)
# You can use: openssl rand -base64 32
JWT_ACCESS_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET_MIN_32_CHARS"
JWT_REFRESH_SECRET="REPLACE_WITH_DIFFERENT_STRONG_RANDOM_SECRET_MIN_32_CHARS"

# CORS - Set to your frontend domain
CORS_ORIGIN="https://your-frontend-domain.com"

# Server Configuration
PORT=3000
NODE_ENV=production

# Optional: Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=info
