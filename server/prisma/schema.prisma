generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum AttendanceStatus {
  CHECKED_IN
  CHECKED_OUT
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      Role     @default(EMPLOYEE)
  phone     String?
  department String?
  position  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attendance    Attendance[]
  refreshTokens RefreshToken[]

  @@index([email])
  @@index([role])
}

model Attendance {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  checkInTime    DateTime
  checkInLat     Float
  checkInLng     Float
  checkInAddress String

  checkOutTime    DateTime?
  checkOutLat     Float?
  checkOutLng     Float?
  checkOutAddress String?

  status AttendanceStatus @default(CHECKED_IN)
  notes  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([checkInTime])
  @@index([userId, checkInTime])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}
